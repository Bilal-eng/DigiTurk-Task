<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nag_graph"
    app:startDestination="@id/filmListsFragment">

    <fragment
        android:id="@+id/filmListsFragment"
        android:name="com.example.digiturktask.presentation.MovieList.FilmListsFragment"
        android:label="Film"
        tools:layout="@layout/fragment_film_lists" >
        <action
            android:id="@+id/action_filmListsFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.example.digiturktask.presentation.Video.VideoPlayerFragment"
        android:label="VideoPlayerFragment" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="videoUrl"
            app:argType="string" />
    </fragment>
</navigation>